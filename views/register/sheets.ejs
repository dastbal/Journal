<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/sheets.css">

<body>
    <script>
        function setbg(color) {
            document.getElementById("styled").style.background = color
        }
    </script>

    <main>
        <%- include('../includes/title.ejs') %>


        <form action="/journal/register/create-sheet" method="POST">
            <div class="form-control">
                <h2>Title</h2>
                <label for="title">
                    <input type="title" required name="title" id="title" placeholder="A great day" value="">
                </label>
            </div>
            <div class="form-control">
                <label for="date">Date:</label>
                <input type="date" id="date" name="date">

            </div>
            <div class="form-control">
                <h2>Place</h2>
                <label for="place">
                    <input type="place" required name="place" id="place" placeholder="Rexburg, Idaho" value="">
                </label>
            </div>
            <div class="form-control">
                <h2>How was your day?</h2>
                <label for="yourDay">
                    <textarea name="yourDay" id="yourDay" onfocus="this.value=''; setbg('#e5fff3');"
                        onblur="setbg('white')">Enter your thoughts here..</textarea>
                </label>
            </div>
            <div class="form-control">
                <h2>Happy experiences</h2>
                <label for="happyExp">
                    <textarea name="happyExp" id="happyExp" onfocus="this.value=''; setbg('#e5fff3');"
                        onblur="setbg('white')">Enter your thoughts here..</textarea> </label>
            </div>
            <div class="form-control">
                <h2>Spiritual experiences</h2>
                <label for="spiritExp">
                    <textarea name="spiritExp" id="spiritExp" onfocus="this.value=''; setbg('#e5fff3');"
                        onblur="setbg('white')">Enter your thoughts here..</textarea>
                </label>
            </div>
            <div class="form-control">
                <h2>To share with others</h2>
                <label for="toShare">
                    <textarea name="toShare" id="toShare" onfocus="this.value=''; setbg('#e5fff3');"
                        onblur="setbg('white')">Enter your thoughts here..</textarea>
                </label> 
            </div>
            <div class="form-control">
                <h2>Sad Experiences</h2>
                <label for="sadExp">
                    <textarea name="sadExp" id="sadExp" onfocus="this.value=''; setbg('#e5fff3');"
                        onblur="setbg('white')">Enter your thoughts here..</textarea>
                </label>
            </div>
            <div class="form-control">
                <h2>Lessons Learned</h2>
                <label for="lessonLearned">
                    <textarea name="lessonLearned" id="lessonLearned" onfocus="this.value=''; setbg('#e5fff3');"
                        onblur="setbg('white')">Enter your thoughts here..</textarea>
                </label>
            </div>

            <button class="btn" type="submit"> Create Sheet</button>
        </form>
    </main>
    <%- include('../includes/navigation.ejs') %>

    <%- include('../includes/end.ejs') %>
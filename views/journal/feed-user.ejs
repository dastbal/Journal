<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/feed.css">
<link rel="stylesheet" href="/css/home.css">

</head>

<body>

    <main>
        <%- include('../includes/title.ejs') %>
        <div class="user-head feed" >
            <div class="user-img">
                <img src="<% if (sheets[0].user.imageUrl) { %>
                    <%= sheets[0].user.imageUrl %> 
                    <% } else { %>https://picsum.photos/500<% } %>"  alt="">

            </div>
            <div class="user-title">
                <h2><%= sheets[0].user.userName %> </h2>
            </div>

        </div>
        <% sheets.forEach(sheet => { %>
            <div class="journal-day" >
                <div class="joural-day-title">
                    <h3><%= sheet.title %> </h3>
                    <div class="journal-info">
                        
                        <span class="place"><%= sheet.place %></span>
                        <span>   -   </span>
                    
                        <span class="date"> 25 April</span>
                </div>
            </div>
            <div class="journal-topic" >
                    <p><%= sheet.toShare %> </p>
            </div>       
        </div>
         
        <% }) %> 

       
    </main>
    <%- include('../includes/navigation.ejs') %>

<%- include('../includes/end.ejs') %>